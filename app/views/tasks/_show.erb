<div id="<%= task.id %>" class="taskDisplay">
  <input class="checkbox" type="checkbox" name="<%= task.id %>"
  <% if task.complete? %>
    checked
  <% end %>
  >
  <label for="<%= task.id %>"><%= task.description %></label>
  <% if !task.complete? %>
    <a class="editable" href="/lists/<%= list.id %>/tasks/<%= task.id %>/edit">Edit task</a>
  <% else %>
    <a class="editable" href="/lists/<%= list.id %>/tasks/<%= task.id %>/delete">Delete task</a>
  <% end %>
</div>