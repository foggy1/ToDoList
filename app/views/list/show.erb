<h3>List Title: <%= @list.title %></h3>


<% if @list.tasks.empty? %>
  <p>There are currently no tasks in this list</p>
<% end %>

<% @list.tasks.each do |task| %>
  <ul>
    <li>
    <%= task.task_description %>
    </li>
  </ul>
<% end %>

<%= @error if @error %>

<% if @list.user_id == current_user.id %>
  <form action="/lists/<%=@list.id %>/tasks/new" method="POST">
    <label for="task_description">Add a new task:</label>
    <input type="text" name="task_description">
    <input type="submit" value="Add new task">
  </form>
<% end %>