<h2>Title: <%= @list.title %></h2>

<% if !@list.tasks.empty? %>
<ul>
  <% @list.tasks.each do |task| %>
    <li>
      <%= task.description %>

      <% if task.marked_as_complete == true %>
      <span>&#10004;</span>
      <% end %>
    </li>

    <% if logged_in? && current_user.id == @list.user_id %>
      <div>

          <a href="/lists/<%= @list.id%>/tasks/<%= task.id%>/edit">Edit</a>

          <form action="/lists/<%= @list.id%>/tasks/<%= task.id%>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete">
          </form>
          <% if task.marked_as_complete == false %>
          <a href="/lists/<%= @list.id%>/tasks/<%= task.id%>/mark">Mark as Complete</a>
          <% end %>
      </div>
    <% end %>

  <% end %>
</ul>
<% end %>

<%= @error if @error %>

<% if logged_in? && current_user.id == @list.user_id %>
  <form action="/lists/<%= @list.id %>/tasks" method="post">
    <input type="text" name="description">
    <input type="submit" value="Add Task">
  </form>

<% end %>
