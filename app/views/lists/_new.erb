<div id="submit-list-partial">
	<h1>create a list</h1>

	<% if @errors %>
		<ul>
			<% @errors.each do |error| %>
				<li><%= error %></li>
			<% end %>
		</ul>
	<% end %>

	<form id="submit-list" method="post" action="/lists">
		<input name="name" type="text" placeholder="name">
		<input type="submit" value="create">
	</form>
</div>