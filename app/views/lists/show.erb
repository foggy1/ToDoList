<h1><%= @list.name %></h1>
<% if !logged_in? %>
  <h3>Tasks</h3>
<% elsif logged_in? %>
  <div><a href="/lists/<%= @list.id %>/tasks/new">Create New Task</a></div>
  <h3>Tasks</h3>
<% end %>

<div>
  <% @tasks.each do |task| %>
    <article id="<%= task.id %>">
      <p><%= task.description %></p>
      <p><a href="/tasks/<%= task.id %>">View</a></p>
      <p><a href="#">Edit</a></p>
      <p><a href="#">Delete</a></p>
    </article>
  <% end %>
</div>
