<section id="todoDisplay">
  <h1 id="listTitle"><%= @list.name %></h1>
  <form id="tasks" action="/lists/<%=@list.id%>/tasks" method="post">
  <input type="hidden" name="_method" value="put">
    <% @tasks.each do |task| %>
      <div id="<%= task.id %>" class="taskDisplay">
        <input type="checkbox" name="<%= task.id %>"
        <% if task.status %>
          checked
        <% end %>
        >
        <label for="<%= task.id %>"><%= task.description %></label>
      </div>
    <% end %>
    <input type="submit" value="Complete items">
  </form>
</section>