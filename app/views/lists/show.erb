<section id="todoDisplay">
  <h1 id="listTitle"><%= @list.name %></h1>
  <a class="editable" href="/lists/<%= @list.id %>/edit">Edit list title</a>
  <form id="tasks" action="/lists/<%=@list.id%>/tasks" method="post">
  <input type="hidden" name="_method" value="put">
    <% @tasks.each do |task| %>
      <div id="<%= task.id %>" class="taskDisplay">
        <input class="checkbox" type="checkbox" name="<%= task.id %>"
        <% if task.complete? %>
          checked
        <% end %>
        >
        <label for="<%= task.id %>"><%= task.description %></label>
        <% if !task.complete? %>
          <a class="editable" href="/lists/<%= @list.id %>/tasks/<%= task.id %>/edit">Edit task</a>
        <% end %>
      </div>
    <% end %>
    <a class="addable" href="/lists/<%=@list.id%>/tasks/new">Add new task</a>
    <input id="completeButton" type="submit" value="Complete items">
  </form>
</section>