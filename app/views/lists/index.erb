<h1>Lists:</h1>

<%= erb :'/shared/_lists', locals: {lists: List.all}, layout: false %>

<% if logged_in? %>
  <form id="add-list-form" action='/lists/new' method="post">
        <label for="list">Create a List: </label>
        <input type="text" name="title" placeholder="Title">
        <input type="submit" value="Add List"><br>
  </form>
<% end %>