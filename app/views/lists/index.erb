<h1>every user's lists</h1>

<% if @errors %>
	<ul>
		<% @errors.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>

<% if @lists.count == 0 %>
	<p>no one's made a list yet...<a href="lists/new">be the first!</a></p>
<% end %>

<% @lists.each do |list| %>
	<ul>
		<li><a href="/lists/<%= list.id %>"><%= list.name %></a></li>
	</ul>
<% end %>