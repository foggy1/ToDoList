<% if logged_in? %>
  <a href="/lists/new">Create a New List</a>
<% end %>

<% if @lists %>
  <ul>
  <% @lists.each do |list| %>
    <li>
      <a href="/lists/<%= list.id %>/tasks"><%= list.name %></a>
      - <a href="/lists/<%= list.id %>/edit">Update your list name</a>
    </li>
  <% end %>
  </ul>
<% end %>